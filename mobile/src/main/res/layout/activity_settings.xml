<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/action_bar_bg"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <RelativeLayout style="@style/SettingsItem">

            <TextView
                style="@style/SettingsItemTitle"
                android:text="@string/enable_analytics" />

            <CheckBox
                android:id="@+id/enabledAnalytics_CheckBox_SettingsActivity"
                style="@style/SettingsItemCheckbox" />
        </RelativeLayout>
</LinearLayout>