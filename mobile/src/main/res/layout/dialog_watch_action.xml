<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/dialog_action_title"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/dialog_title_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_button_top_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/about_Button_dialog_watch_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dialog_button_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/dialog_about"
            android:textColor="@color/dialog_text_color" />

        <Button
            android:id="@+id/settings_Button_dialog_watch_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_button_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/dialog_settings"
            android:textColor="@color/dialog_text_color" />
    </LinearLayout>
</LinearLayout>